// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AuthToken {
  id              String   @id
  merchantId      String
  authorizedAppId String?  @unique
  salesChannelId  String?
  type            String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  deleted         Boolean  @default(false)

  accessToken     String
  tokenType       String
  expiresIn       Int
  expireDate      DateTime
  refreshToken    String
  scope           String?
}

model LoyaltyTransaction {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  
  customerId  String
  type        String   // EARN, REDEEM, REFUND
  points      Int
  amount      Float?   // Related order amount or discount value
  metadata    Json?    // Store extra details like orderId
}

model LoyaltyBalance {
  customerId  String   @id @unique
  firstName   String?
  lastName    String?
  email       String?
  points      Int      @default(0)
  updatedAt   DateTime @updatedAt
}

model LoyaltySettings {
  id        String   @id @default("default")
  
  // Earning Rules
  earnPerAmount    Float   @default(1.0) // "1 Point"...
  earnUnitAmount   Float   @default(1.0) // ... per "1 Unit Currency"
  earnRatio        Float   @default(1.0) // Legacy support / Calculated (X/Y)
  welcomeBonus     Int     @default(0)
  excludeShipping  Boolean @default(false)
  excludeDiscounted Boolean @default(false)
  categoryBonuses   Json?   // Stores { "Category Name": Multiplier }
  tiers             Json?   // Stores List of Rules [{ name, threshold, multiplier }]

  // Redemption Rules
  burnRatio          Float @default(0.01) // 1 Point = X TL
  minSpendLimit      Float @default(0)
  maxPointUsage      Float @default(0) // 0 = Unlimited
  
  // Branding / Widget
  widgetPrimaryColor String @default("#4F46E5")
  widgetLabel        String @default("Puan") 
  
  updatedAt DateTime @updatedAt
}
