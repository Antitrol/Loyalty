// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model AuthToken {
  id              String   @id
  merchantId      String
  authorizedAppId String?  @unique
  salesChannelId  String?
  type            String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  deleted         Boolean  @default(false)

  accessToken     String
  tokenType       String
  expiresIn       Int
  expireDate      DateTime
  refreshToken    String
  scope           String?
}

model LoyaltyTransaction {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  
  customerId  String
  type        String   // EARN, REDEEM, REFUND
  points      Int
  amount      Float?   // Related order amount or discount value
  metadata    Json?    // Store extra details like orderId
}

model LoyaltyBalance {
  customerId  String   @id @unique
  firstName   String?
  lastName    String?
  email       String?
  points      Int      @default(0)
  updatedAt   DateTime @updatedAt
}

model LoyaltySettings {
  id        String   @id @default("default")
  earnRatio Float    @default(1.0)
  burnRatio Float    @default(0.01)
  updatedAt DateTime @updatedAt
}
